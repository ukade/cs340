<h1>Add/View/Delete/Update Commissions</h1>
<br>
{{#each foo}}
{{this}}
{{/each}}
<table>
  <thead>
    <th>Commission ID:</th>
    <th>Maker ID:</th>
    <th>Finished:</th>
    <th>Date Start:</th>
    <th>Date Due:</th>
    <th>Comments:</th>
  </thead>
  <tbody>
    {{#each commissions}}
    <tr>
      <td>{{commission_id}}</td>
      <td>{{m_id}}</td>
      <td>{{finished}}</td>
      <td>{{date_start}}</td>
      <td>{{date_due}}</td>
      <td>{{comments}}</td>
      <td><button onclick="deleteCommission({{commission_id}})">Delete</button></td>      
      <td><form action="/commissions/{{commission_id}}">
          <input type="submit" value="Update"></form></td>
    </tr>
    {{/each}}
  </tbody>
  <form id="addcommission" action="/commissions" method="post">
  Maker ID: <select name="m_id">
    {{#each makers}}
    <option value="{{maker_id}}">{{maker_id}}</option>
    {{/each}}
</select><br> 
  Finished: <input type="radio" name="finished" id="finished1" value="yes">
        <label for="finished1">Yes</label>
        <input type="radio" name="finished" id="finished2" value="no">
        <label for="finished2">No</label><br>
  Date Start: <input type="date" name="date_start"><br>
  Date Due: <input type="date" name="date_due"><br>
  Comments: <input type="text" name="comments"><br>
   <input type="submit" value="submit">
  </form>
</table>
